.modal
  background: rgba(0,0,0,0.5)
  .modal-header, .modal-footer
    background: rgba(0,0,0,0.9)
    height: 10%

    .x-corner
      float: right
      margin-left: 15px
      margin-top: -10px

    .close
      cursor: default
      color: #8a6d3b

  .modal-content
    background: transparent
    height: 90%
.modal.bottom-sheet
  max-height: 100%
  height: 100%

